<resources xmlns:tools="http://schemas.android.com/tools">

    <item name="visible" type="id" />
    <item name="masked" type="id" />

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/caviar_dreams</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--Sign IN-->
    <style name="SignIn_imv_main_style">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
    </style>

    <style name="SignIn_TIPL_Email_Style" parent="@android:style/TextAppearance">
        <item name="android:theme">@style/textColorHintTheme</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="SignIn_TIPL_Password_Style" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:theme">@style/textColorHintTheme</item>
    </style>

    <!--etx-->
    <style name="SignIn_Etx_Email_Style">
        <item name="android:theme">@style/textColorHintTheme</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:inputType">textEmailAddress|textCapSentences</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">
            @color/snackbar_not_registered
        </item>
        <item name="android:hint">Email</item>
        <item name="android:textColor">@color/snackbar_not_registered</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SignIn_Etx_passWord_Style">
        <item name="android:theme">@style/textColorHintTheme</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:inputType">textVisiblePassword</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">
            @color/snackbar_not_registered
        </item>
        <item name="android:hint">Password</item>
        <item name="android:textColor">@color/snackbar_not_registered</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <!--btn LOGIN-->
    <style name="SignIn_Btn_submit_style">
        <item name="android:theme">@style/submitTheme</item>
        <item name="android:textColor">#fff</item>
        <item name="android:text">LOG IN</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--btn Register-->
    <style name="SignIn_Btn_Register_style">
        <item name="android:textColor">@color/snackbar_username_check</item>
        <item name="android:text">Don't have an Account? Sign UP</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="submitTheme">
        <item name="android:backgroundTint" tools:targetApi="lollipop">
            @color/snackbar_not_registered
        </item>
        <item name="android:colorControlHighlight" tools:targetApi="lollipop">
            @color/blue_dark_grey
        </item>
    </style>

    <style name="RegisterTheme">
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/yellow
        </item>
        <item name="android:colorControlHighlight" tools:targetApi="lollipop">
            @color/blue_dark_grey
        </item>
    </style>

    <style name="textColorHintTheme">
        <item name="android:textColorHint">@color/snackbar_not_registered</item>
    </style>

    <style name="fab">
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/green</item>
    </style>

    <style name="MyAppTheme.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">#f32</item>
    </style>


    <!--Sign UP-->
    <style name="SignUp_imv_main_style">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
    </style>

    <style name="SignUp_TIPL_Name_Style" parent="@android:style/TextAppearance">
        <item name="android:theme">@style/textColorHintTheme</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="SignUp_TIPL_Email_Style" parent="@android:style/TextAppearance">
        <item name="android:theme">@style/textColorHintTheme</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="SignUp_TIPL_Password_Style" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:theme">@style/textColorHintTheme</item>
    </style>

    <!--etx-->

    <style name="SignUp_Etx_Name_Style">
        <item name="android:theme">@style/textColorHintTheme</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:inputType">textEmailAddress|textCapSentences</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/snackbar_email_check
        </item>
        <item name="android:hint">Name</item>
        <item name="android:textColor">@color/snackbar_email_check</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SignUp_Etx_Email_Style">
        <item name="android:theme">@style/textColorHintTheme</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:inputType">textEmailAddress|textCapSentences</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/yellow</item>
        <item name="android:hint">Email</item>
        <item name="android:textColor">#ffef40</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SignUp_Etx_passWord_Style">
        <item name="android:theme">@style/textColorHintTheme</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:inputType">textVisiblePassword</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/yellow</item>
        <item name="android:hint">Password</item>
        <item name="android:textColor">#ffef40</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <!--btn Submit-->
    <style name="SignUp_Btn_submit_style">
        <item name="android:theme">@style/submitTheme</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:text">LOG IN</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--btn Register SignUp-->
    <style name="SignUp_Btn_Register_style">
        <item name="android:theme">@style/RegisterTheme</item>
        <item name="android:textColor">#000</item>
        <item name="android:text">REGISTER</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="ProgressBarTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/yellow</item>
    </style>

    <style name="RESET">
        <item name="android:colorControlHighlight" tools:targetApi="lollipop">#fff</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">#ff2285</item>
    </style>


    <style name="Profile_Btn_Style">
        <item name="android:theme">@style/SetName</item>
        <item name="android:textColor">@color/snackbar_email_check</item>
        <item name="android:text">SET</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="SetName">
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/blue_dark_grey</item>
        <item name="android:colorControlHighlight" tools:targetApi="lollipop">
            @color/snackbar_email_check
        </item>
    </style>

    <style name="recyclerView_style">
        <item name="android:scrollbarSize">2dp</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Btn_sendMsg">
        <item name="android:colorControlHighlight" tools:targetApi="lollipop">
            @color/snackbar_email_check
        </item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">
            @color/snackbar_not_registered
        </item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">#FFC107</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <!-- Used for the background -->
        <item name="android:background">#a92ec7</item>
        <item name="android:textSize">16sp</item>
    </style>


    <!--Password reset-->
    <!--btn Cancel-->
    <style name="PWD_DIALOG_CANCEL_STYLE">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:text">CANCEL</item>
        <item name="android:textColor">#f1314b</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--btn Submit-->
    <style name="PWD_DIALOG_SUBMIT_STYLE">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">#3acf5d</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#f32</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/snackbar_email_check</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>


    <!--content main etx-->
    <style name="etx_message_style">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:inputType">text</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">
            @color/snackbar_not_registered
        </item>
        <item name="android:textColor">@color/snackbar_not_registered</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHint">@color/snackbar_email_check</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


</resources>
